# Program Daftar Nilai Mahasiswa (Dictionary)

mahasiswa = {}

def hitung_nilai_akhir(tugas, uts, uas):
    return (tugas * 0.30) + (uts * 0.35) + (uas * 0.35)

def tambah_data():
    print("\n=== Tambah Data Mahasiswa ===")
    nama = input("Nama mahasiswa : ")
    tugas = float(input("Nilai Tugas : "))
    uts = float(input("Nilai UTS : "))
    uas = float(input("Nilai UAS : "))

    nilai_akhir = hitung_nilai_akhir(tugas, uts, uas)

    mahasiswa[nama] = {
        "tugas": tugas,
        "uts": uts,
        "uas": uas,
        "akhir": nilai_akhir
    }

    print("\nData berhasil ditambahkan!")

def ubah_data():
    print("\n=== Ubah Data Mahasiswa ===")
    nama = input("Masukkan nama yang akan diubah : ")

    if nama in mahasiswa:
        print("Masukkan nilai baru:")
        tugas = float(input("Nilai Tugas : "))
        uts = float(input("Nilai UTS : "))
        uas = float(input("Nilai UAS : "))

        nilai_akhir = hitung_nilai_akhir(tugas, uts, uas)

        mahasiswa[nama] = {
            "tugas": tugas,
            "uts": uts,
            "uas": uas,
            "akhir": nilai_akhir
        }
        print("Data berhasil diubah!")
    else:
        print("Data tidak ditemukan!")

def hapus_data():
    print("\n=== Hapus Data Mahasiswa ===")
    nama = input("Masukkan nama yang akan dihapus : ")

    if nama in mahasiswa:
        del mahasiswa[nama]
        print("Data berhasil dihapus!")
    else:
        print("Data tidak ditemukan!")

def tampilkan_data():
    print("\n=== Daftar Nilai Mahasiswa ===")
    if not mahasiswa:
        print("Belum ada data!")
    else:
        for nama, data in mahasiswa.items():
            print(f"""
Nama        : {nama}
Tugas       : {data['tugas']}
UTS         : {data['uts']}
UAS         : {data['uas']}
Nilai Akhir : {data['akhir']:.2f}
""")

def cari_data():
    print("\n=== Cari Data Mahasiswa ===")
    nama = input("Masukkan nama mahasiswa : ")

    if nama in mahasiswa:
        data = mahasiswa[nama]
        print(f"""
Nama        : {nama}
Tugas       : {data['tugas']}
UTS         : {data['uts']}
UAS         : {data['uas']}
Nilai Akhir : {data['akhir']:.2f}
""")
    else:
        print("Data tidak ditemukan!")

def menu():
    while True:
        print("""
===== Menu Program Nilai Mahasiswa =====
1. Tambah Data
2. Ubah Data
3. Hapus Data
4. Tampilkan Data
5. Cari Data
0. Keluar
""")

        pilihan = input("Pilih menu: ")

        if pilihan == "1":
            tambah_data()
        elif pilihan == "2":
            ubah_data()
        elif pilihan == "3":
            hapus_data()
        elif pilihan == "4":
            tampilkan_data()
        elif pilihan == "5":
            cari_data()
        elif pilihan == "0":
            print("Program selesai.")
            break
        else:
            print("Pilihan tidak valid!")

menu()
